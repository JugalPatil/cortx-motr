set -eu -o pipefail
export PS4='+ [${BASH_SOURCE[0]##*/}:${LINENO}${FUNCNAME[0]:+:${FUNCNAME[0]}}] '
# set -x

PROG=${0##*/}
DEFAULT_DEST_DIR=/tmp
COMPONENT=motr

usage() {
    cat <<EOF
Usage: $PROG <bundle-id> <dest-dir>
       $PROG [-h | --help]

Create '<dest-dir>/$COMPONENT/${COMPONENT}_<bundle-id>.tar' archive
that contains m0reportbug archives
that contain Motr forensic data
that can be used for reporting and researching Motr bugs.

Positional arguments:
  dest-dir    Target directory; defaults to '$DEFAULT_DEST_DIR'.
  bundle-id   Support bundle ID; defaults to the local host name
              (`hostname`).
  -c <config_url>  cluster config URL
  -s <service>     single or multiple service
  -d <no_of_days>  logs for last n days / weeks / months
  -e <type_of_log> type of logs (text, binary, etc)
  -m <size_of_log> Limited sized logs
  -o <core_dumps>  Include or exclude core dumps, exclude by default
  -k <stack_traces> Include or exclude stack traces, include by default
Options:
  -h, --help   Show this help and exit.
EOF
}

die() {
    echo "$PROG: $*" >&2
    exit 1
}

case "${1:-}" in
    -h|--help) usage; exit;;
esac

if (($? != 0 && $? != 2)); then
    die "Wrong number of arguments. Type '$PROG --help' for usage."
fi

bundle_id=${1:-$HOSTNAME}
dest_dir=${2:-$DEFAULT_DEST_DIR}

while getopts ":b:t:c:s:d:e:m:o:k:" flag
do
    case "${flag}" in
          b) bundle_id="$OPTARG";;
          t) dest_dir="$OPTARG";;
          c) config_url="$OPTARG";;
          s) service="$OPTARG";;
          d) no_of_days="$OPTARG";;
          e) type_of_log="$OPTARG";;
          m) size_of_log="$OPTARG";;
          o) core_dumps="$OPTARG";;
          k) stack_traces="$OPTARG";;

    esac
done

if [[ -z "$bundle_id" || -z "$dest_dir" ]]; then
    die "Invalid argument. Type '$PROG --help' for usage."
fi

if [[ -a $dest_dir && ! -d $dest_dir ]]; then
    die "$dest_dir is not a directory"
fi

# XXX The intermediate `$COMPONENT` directory is required by the
# CSM Support Bundle spec-ification.
mkdir -p "$dest_dir/$COMPONENT/$HOSTNAME"
cd "$dest_dir/$COMPONENT/$HOSTNAME"

exec 2> >(tee _$PROG.stderr >&2)
sudo m0reportbug --addb --binaries -s "$sevice" -e "$type_of_log" \
                 -d "$no_of_days" -m "$size_of_log" -o "$core_dumps" -k "$stack_traces"
cd ..
# The archives generated by `m0reportbug` are already compressed (.tar.xz).
# It would be pointless to compress them again.
tar --remove-files -cf "${COMPONENT}_${bundle_id}.tar" $HOSTNAME
