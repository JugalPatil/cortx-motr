import subprocess
import os
import sys
import getopt
import json
import time
from socket import gethostname
from typing import Dict, List, NamedTuple, Set
import re
from datetime import datetime
from collections import OrderedDict
from motr_mini_prov import motr_prov


'''
workflow()
{
cat << EOF

    The m0provision script will be called by the provisioner after the
    installation of Motr RPM, for setting configurations and testing
    sanity of the setup.

EOF
}

help()
{
cat << EOF
    *** CAUTION ***

    The $0 script should be invoked only by the provisioner.
    Should be invoked with sudo.

    Usage:
    sudo $0 [ACTION] ARGS
        ACTION: post_install | init | config | test | reset
            ARGS (post_install) : TOBE implemented.
            ARGS (init)         : TOBE implemented.
            ARGS (config)       : config
            ARGS (test)         : test
            ARGS (reset)        : TOBE implemented.
EOF
}
'''

class M0provision(motr_prov):
    def __init__(self, index, url):
        self.opt_func = {"post_install":self.post_install_fn,
                         "config"      :self.config_fn,
                         "init"        :self.init_fn,
                         "test"        :self.test_fn,
                         "reset"       :self.reset_fn,
                         "cleanup"     :self.cleanup_fn,
                         "upgrade"     :self.upgrade_fn,
                         "backup"      :self.backup_fn,
                         "restore"     :self.restore_fn}
        super().__init__(index, url)

    def print_banner(self, name):
        print('-'*80)
        print('{:^80s}'.format(name))
        print('-'*80)

    def post_install_fn(self):
        pass

    def config_fn(self):
        print("In config url={}".format(self.url))
        super().config_motr()

    def init_fn(self):
        print("In init url={}".format(self.url))
        super().config_lvm()
        super().configure_lnet_from_conf_store()

    def test_fn(self):
        super().test_motr()
        super().test_lnet()

    def reset_fn(self):
        pass

    def cleanup_fn(self):
        pass

    def upgrade_fn(self):
        pass

    def backup_fn(self):
        pass

    def restore_fn(self):
        pass

if __name__ == "__main__":
    print("No of args = {}".format(len(sys.argv)))
    print("Args = {}".format(sys.argv))
    if (len(sys.argv) != 3):
        print("Invalid num of arguments.")
        print("Use m0provision <post_install | config | init | test | reset> <url>")
        sys.exit(2)
    conf_store_obj = M0provision('motr_prov_conf', sys.argv[2])
    print("conf_store_obj.url={}".format(conf_store_obj.url))
    conf_store_obj.print_banner(f"m0provision {sys.argv[1]}")
    conf_store_obj.opt_func[sys.argv[1]]()
    sys.exit(0)

